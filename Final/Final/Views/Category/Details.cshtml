@model VmNews
@{
    ViewData["Title"] = "Details";
    var relatedPostCount = 1;
}


<!-- Page Title Start -->
<section id="Page-Title">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-inner">
                    <h5 class="page-title">Blog-details</h5>
                    <ul class="page-list">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li>Blog-details</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Page Title End -->
<!-- Detail Page Start  -->
<section id="Details">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 pd-top-50">
                <div class="page-count" >
                    <label class="label" style=" font-size: 21px; font-weight: 600;">Baxis sayi: <i class="fas fa-eye"></i> @Model.news2.ViewCount</label>
                </div>
                <div class="blog-details-page-inner">
                    <div class="single-blog-inner m-0">
                        <div class="single-post-wrap style-overlay">
                            <div class="thumb">
                                <img src="~/Uploads/Images/@Model.news2.MainImage" style="width:100%" alt="">
                            </div>
                            <div class="details pb-4">
                                <div class="post-meta-single mb-2">
                                    <ul>
                                        <li>
                                            <a href="#" class="tag-base tag-blue">@Model.news2.Category.Name</a>
                                        </li>
                                        <li>
                                            <p>
                                                <i class="fa fa-clock-o"></i> @Model.news2.CreatedDate.ToString("dd.MM.yyyy")
                                            </p>
                                        </li>
                                        <li>
                                            <i class="fa fa-user"></i> R. Lambert
                                        </li>
                                    </ul>
                                </div>
                                <h5 class="title mt-0">@Model?.news2.Title</h5>
                            </div>
                        </div>
                        <div class="single-blog-details">
                            <p>
                                @Model?.news2.Description1
                            </p>
                            <blockquote class="blockquote">
                                <i class="fa fa-quote-right"></i>
                                <p>
                                    @Model?.news2.Description2
                                </p>
                            </blockquote>
                        </div>

                        <div class="add-area">
                            <a href="">
                                <img src="~/Assets/image/47.png" alt="">
                            </a>
                        </div>
                        <h5>@Model?.news2.Subtitle</h5>
                        <p>
                            @Model?.news2.Description3
                        </p>
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="thumb mb-3 mb-sm-0">
                                    <img src="~/Uploads/Images/@Model?.news2.Image1" style="width: 100%" alt="">
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <img src="~/Uploads/Images/@Model?.news2.Image2" style="width: 100%" alt="">
                            </div>
                        </div>
                        <div class="video-area">
                            <h5>Expression in New Human Rights Policy</h5>
                            <div class="single-blog-inner mb-4">
                                <div class="thumb">
                                    <img src="~/Uploads/Images/@Model?.news2.VideoImage" style="width:100%;" alt="">
                                    <a data-fancybox class="video-play-btn" href="https://www.youtube.com/embed/Wimkqo8gDZ0" data-effect="mfp-zoom-in"><i class="fa fa-play"></i></a>
                                </div>
                            </div>
                        </div>
                        <p>
                            @Model?.news2.Description3
                        </p>
                        <div class="meta">
                            <div class="row">
                                <div class="col-lg-5">
                                    <div class="tags">
                                        <span>Tags:</span>
                                        @foreach (var tags in Model.news2.newsToTags)
                                        {
                                            <a>@tags.Tags.Name,</a>

                                        }
                                    </div>
                                </div>
                                <div class="col-lg-7 text-md-right">
                                    <div class="blog-share">
                                        <span>Share:</span>
                                        <ul class="social-area">
                                            @foreach (var item in Model.socials)
                                            {
                                                <li>
                                                    <a href="@item.Link" name="@item.Name" class="@item.Color" style="@*background:@item.Background;*@color:@item.Color;width:40px;height:40px;display:inline-block;"><i style="background:@item.Background;color:@item.Color;width:40px;height:40px;border-radius:50%;line-height:40px;text-align:center" class="@item.Icon"></i></a>
                                                </li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="author-area">
                            <div class="media">
                                <img src="~/Assets/image/blog8.png" alt="">
                                <div class="media-body align-self-center">
                                    <h4>Nathan George</h4>
                                    <p>
                                        @Model?.news2.Description3
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="related-post">
                        <div class="section-title mb-0">
                            <h5 class="mb-0">Related Post</h5>
                        </div>
                        <div class="row justify-content-center">
                            @foreach (var item in Model.news.ToArray().Reverse())
                            {
                                if ((Model.news2.Category.Name == item.Category.Name) && relatedPostCount < 4)
                                {
                                    relatedPostCount++;
                                    <div class="col-lg-4 col-md-6">
                                        <div class="single-post-wrap">
                                            <div class="thumb" style="width:100%">
                                                <img src="~/Uploads/Images/@item.MainImage" style="width: 100% !important;" alt="">
                                                <a class="tag-base tag-red" href="#">@item.Category.Name</a>
                                            </div>
                                            <div class="details">
                                                <div class="post-meta-single">
                                                    <ul>
                                                        <li>
                                                            <i class="fa fa-clock-o"></i> @item.CreatedDate.ToString("dd.MM.yyyy")
                                                        </li>
                                                        <li>
                                                            <i class="fa fa-user"></i> @item.CreatedDate.ToString("dd.MM.yyyy")
                                                        </li>
                                                    </ul>
                                                </div>
                                                <h6 class="title mt-2">
                                                    <a href="">@item.Title</a>
                                                </h6>
                                            </div>
                                        </div>
                                    </div>
                                }


                            }
                        </div>
                    </div>
                    <div class="blog-comment">
                        <div class="section-title">
                            <h4>3 Comments</h4>
                        </div>
                        <div class="media">
                            <div class="col-lg-12">
                                <div id="fb-root"></div>
                                <div class="fb-comments" data-href="@Model.news2.Id" data-width="100%" data-numposts="10"></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-lg-3 pd-top-50">
                <div class="Latest-title  mb-4">
                    <h6 class="title">Category</h6>
                </div>
                <div class="row custom-gutters-14">
                    @foreach (var item in Model.categories)
                    {
                        <div class="col-sm-6">
                            <div class="single-category-inner">
                                <img src="~/Uploads/Images/@item.MainImage" alt="img">
                                <a class="tag-base tag-blue" asp-controller="Category" asp-action="Category" asp-route-categoryId="@item.Id">@item.Name</a>
                            </div>
                        </div>
                    }

                    <div class="col-12">
                        <div class="add">
                            <img class="w-100" src="~/Assets/image/reklam2.png" alt="img">
                        </div>
                    </div>
                </div>
                <div class="widget widget-social">
                    <h6 class="widget-title">Join to Us</h6>
                    <ul class="social-area social-area-2">
                        @foreach (var item in Model.socials)
                        {
                            <li>
                                <a href="@item.Link" name="@item.Name" class="@item.Color" style="color:@item.Color"><i style="background:@item.Background;color:@item.Color" class="@item.Icon"></i></a>
                            </li>
                        }
                        

                    </ul>
                </div>
                <div class="section-title">
                    <h6 class="title">Trending News</h6>
                </div>
                <div class="section-slider">
                    <div class="item">
                        <div class="trending-post">
                            @foreach (var item in Model.news.OrderByDescending(e=>e.ViewCount).Take(3))
                            {
                                <div class="single-post-wrap style-overlay">
                                    <div class="thumb">
                                        <img src="~/Uploads/Images/@item.MainImage" alt="img">
                                    </div>
                                    <div class="details">
                                        <div class="post-meta-single">
                                            <p><i class="fa fa-clock-o"></i>@item.CreatedDate.ToString("dd.MM.yyyy")</p>
                                        </div>
                                        <h6 class="title"><a asp-controller="Category" asp-action="Details">@item.Title </a></h6>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="trending-post">
                            @foreach (var item in Model.news.OrderByDescending(e => e.ViewCount).Skip(3).Take(3))
                            {
                                <div class="single-post-wrap style-overlay">
                                    <div class="thumb">
                                        <img src="~/Uploads/Images/@item.MainImage" alt="img">
                                    </div>
                                    <div class="details">
                                        <div class="post-meta-single">
                                            <p><i class="fa fa-clock-o"></i>@item.CreatedDate.ToString("dd.MM.yyyy")</p>
                                        </div>
                                        <h6 class="title"><a asp-controller="Category" asp-action="Details">@item.Title </a></h6>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="trending-post">
                            @foreach (var item in Model.news.OrderByDescending(e => e.ViewCount).Skip(6).Take(3))
                            {
                                <div class="single-post-wrap style-overlay">
                                    <div class="thumb">
                                        <img src="~/Uploads/Images/@item.MainImage" alt="img">
                                    </div>
                                    <div class="details">
                                        <div class="post-meta-single">
                                            <p><i class="fa fa-clock-o"></i>@item.CreatedDate.ToString("dd.MM.yyyy")</p>
                                        </div>
                                        <h6 class="title"><a asp-controller="Category" asp-action="Details">@item.Title </a></h6>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>


                </div>
                <div class="nxp-tab-inner nxp-tab-post-two mb-4">
                    <ul class="nav nav-tabs " id="nx1" role="tablist">
                        <li class="nav-item active" data-filter=".Recent">
                            <a class="nav-link " id="nx1-tab-1" data-toggle="pill" href="#nx1-tabs-1" role="tab" aria-selected="true">
                                Recent
                            </a>
                        </li>
                        <li class="nav-item" data-filter=".Populer">
                            <a class="nav-link" id="nx1-tab-2" data-toggle="pill" href="#nx1-tabs-2" role="tab" aria-selected="false">
                                Populer
                            </a>
                        </li>
                        <li class="nav-item" data-filter=".Comment">
                            <a class="nav-link" id="nx1-tab-3" data-toggle="pill" href="#nx1-tabs-3" role="tab" aria-selected="false">
                                Comment
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="portfolio-item">
                    @foreach (var item in Model.news.Take(1))
                    {
                        <div class="Latest-post-list-wrap Recent Populer " style="margin-bottom: 25px;">
                            <div class="Gallery">
                                <div class="gallery-left">
                                    <img src="~/Assets/image/1.png" alt="img">
                                </div>
                                <div class="gallery-body">
                                    <div class="details">
                                        <div class="post-meta-single">
                                            <ul>
                                                <li><i class="fa fa-clock-o"></i>08.22.2020</li>
                                            </ul>
                                        </div>
                                        <h6 class="title"><a href="blog-details.html">Himachal Pradesh rules in order to allow tourists </a></h6>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="Latest-post-list-wrap Populer Recent" style="margin-bottom: 25px;">
                        <div class="Gallery">
                            <div class="gallery-left">
                                <img src="~/Assets/image/2.png" alt="img">
                            </div>
                            <div class="gallery-body">
                                <div class="details">
                                    <div class="post-meta-single">
                                        <ul>
                                            <li><i class="fa fa-clock-o"></i>08.22.2020</li>
                                        </ul>
                                    </div>
                                    <h6 class="title"><a href="blog-details.html">Himachal Pradesh rules in order to allow tourists </a></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="Latest-post-list-wrap Recent Comment" style="margin-bottom: 25px;">
                        <div class="Gallery">
                            <div class="gallery-left">
                                <img src="~/Assets/image/3.png" alt="img">
                            </div>
                            <div class="gallery-body">
                                <div class="details">
                                    <div class="post-meta-single">
                                        <ul>
                                            <li><i class="fa fa-clock-o"></i>08.22.2020</li>
                                        </ul>
                                    </div>
                                    <h6 class="title"><a href="blog-details.html">Himachal Pradesh rules in order to allow tourists </a></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="Latest-post-list-wrap Comment Recent Populer" style="margin-bottom: 25px;">
                        <div class="Gallery">
                            <div class="gallery-left">
                                <img src="~/Assets/image/2.png" alt="img">
                            </div>
                            <div class="gallery-body">
                                <div class="details">
                                    <div class="post-meta-single">
                                        <ul>
                                            <li><i class="fa fa-clock-o"></i>08.22.2020</li>
                                        </ul>
                                    </div>
                                    <h6 class="title"><a href="blog-details.html">Himachal Pradesh rules in order to allow tourists </a></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="Latest-post-list-wrap Comment Populer" style="margin-bottom: 25px;">
                        <div class="Gallery">
                            <div class="gallery-left">
                                <img src="~/Assets/image/3.png" alt="img">
                            </div>
                            <div class="gallery-body">
                                <div class="details">
                                    <div class="post-meta-single">
                                        <ul>
                                            <li><i class="fa fa-clock-o"></i>08.22.2020</li>
                                        </ul>
                                    </div>
                                    <h6 class="title"><a href="blog-details.html">Himachal Pradesh rules in order to allow tourists </a></h6>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @await Component.InvokeAsync("VcSubscribe")
            </div>
        </div>
    </div>
</section>
<!-- Detail Page End -->
