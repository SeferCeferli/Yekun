@model List<About>
@{
    ViewData["Title"] = "Index";
}


<!-- Page Title Start -->
<section id="Page-Title">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-inner">
                    <h5 class="page-title">About</h5>
                    <ul class="page-list">
                        <li><a href="index.html">Home</a></li>
                        <li>About</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Page Title End -->
<!-- About Page Start -->
<section id="About">
    <div class="container">
        <div class="row" style="justify-content: center;">
            <div class="col-lg-8">
                @foreach (var item in Model)
                {
                    <div class="about-page">
                        <h2 class="title">@item.Title</h2>
                        <p class="subtitle" style="font-size:24px">@Html.Raw(item.Text)</p>

                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- About Page End -->
