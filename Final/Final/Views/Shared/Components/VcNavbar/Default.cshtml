@model VmFooter
@{
    Layout = null;
}
<div class="header-top">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-7">
                <div class="topbar-menu">
                    <ul class="align-self-center">
                        <li><a asp-controller="About" asp-action="Index">About Us</a></li>
                        <li><a asp-controller="Advertisment" asp-action="Index">Advertisment</a></li>
                        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                        <li><a asp-controller="Sitemap" asp-action="Index">Sitemap</a></li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-5">
                <div class="topbar-social">
                    <div class="topbar-date">
                        <i class="fas fa-table"></i> Saturday, October 7
                    </div>
                    <ul class="social-area">
                        @foreach (var item in Model.socials)
                        {
                            <li>
                                <a href="@item.Link" name="@item.Name" class="@item.Color" style="color:@item.Color;width:40px;height:40px;display:inline-block;"><i style="background:@item.Background;color:@item.Color;width:40px;height:40px;border-radius:50%;line-height:40px;text-align:center" class="@item.Icon"></i></a>
                            </li>
                        }

                        @*<li>
                            <a href="" class="twitter-icon"><i class="fab fa-twitter"></i></a>
                        </li>
                        <li>
                            <a href="" class="youtube-icon"><i class="fab fa-youtube"></i></a>
                        </li>
                        <li>
                            <a href="" class="instagram-icon"><i class="fab fa-instagram"></i></a>
                        </li>
                        <li>
                            <a href="" class="google-icon"><i class="fab fa-google-plus-g"></i></a>
                        </li>*@
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="header-bottom">
    <div class="container">
        <div class="row">
            <div class="col-xl-6 col-lg-5">
                <div class="top-logo">
                    <a asp-controller="Home" asp-action="Index" class="main-logo">
                        <img src="~/Assets/image/logo-2.png" alt="">
                    </a>
                </div>
            </div>
            <div class="col-xl-6 col-lg-7">
                <div class="right-reklam">
                    <a href="#" class="logo-right">
                        <img src="~/Assets/image/reklam.png" alt="">
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

<nav class="navbar navbar-expand-lg navbar-dark bg-light  ">
    <div class="container">
        <div class="logo d-lg-none d-block">
            <a class="main-logo" asp-controller="Home" asp-action="Index"><img src="~/Assets/image/logo-mobile.png" alt="img"></a>
        </div>
        <div class="nav-icon">
            <div class="mobile-icon modal-on">
                <i class="fas fa-search"></i>
            </div>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

        </div>
        <div class="modal-container">
            <div class="container">
                <div class="close-icon">
                    <i class="fas fa-times" aria-hidden="true"></i>
                </div>
                <div class="col-lg-8">
                    <div class="search-modal">
                        <div class="input-group mb-3">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1"><i class="fas fa-search" aria-hidden="true"></i></span>
                            </div>
                            <input type="text" class="form-control" placeholder="Username" aria-label="Username" aria-describedby="basic-addon1">
                        </div>
                    </div>
                </div>
            </div>
        </div>


        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Category" asp-action="Category" asp-route-categoryId="11">Tech</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Category" asp-action="Category" asp-route-categoryId="12">Sports</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Category" asp-action="Category" asp-route-categoryId="14">LifeStyle</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Category" asp-action="Category" asp-route-categoryId="13">Fashion</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Category" asp-action="Category" asp-route-categoryId="15">Food</a>
                </li>
            </ul>
            <div class="nav-right-part nav-right-part-desktop">
                <div class="menu-search-inner">
                    <form method="get" asp-controller="Category" asp-action="Index">
                        <input type="search" placeholder="Search For" value="@ViewData["GetNewsDetails"]" name="Newssearch">
                        <button type="submit" class="submit-btn"><i class="fa fa-search"></i></button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</nav>
