@model VmNews
@{
    Layout = null;

}

<form asp-controller="Home" asp-action="Subscribe" class="single-newsletter-inner bg-blue text-center">
    <h5>Newsletter</h5>
    <p>Stay Updated on all that's new add noteworthy</p>
    <div class="single-input-inner">
        <input type="text" asp-for="@Model.subscribe.Name" placeholder="Enter Your Name">
    </div>
    <div class="single-input-inner">
        <input type="email" asp-for="@Model.subscribe.Email" placeholder="Enter Your Email">
    </div>
    <button type="submit" value="" class="send" style="width: 100%;
    height: 100%;
    background: #fff;
    color: #201654;
    border: 0;
    height: 48px;
    line-height: 48px;
    padding: 0 35px;
    overflow: hidden;
    position: relative;
    border: 0;
    transition: all 0.5s ease;
    font-weight: 500;
    font-size: 16px;
    display: inline-block;
    transform: perspective(1px) translateZ(0);
    border-radius: 5px;
    font-family: " Rubik", sans-serif;">
        Submit
    </button>
</form>
