@model News
@{
    ViewData["Title"] = "Create";
}

<div class="intro-y flex items-center mt-8">
    <h2 class="text-lg font-medium mr-auto">
        Create News
    </h2>
</div>
<div class="grid grid-cols-12 gap-6 mt-5">
    <div class="intro-y col-span-12 lg:col-span-6">
        <!-- BEGIN: Form Layout -->
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" style="color:red"></div>
            <div class="intro-y box p-5">
                <div>
                    <label asp-for="ImageFile">Image</label>
                    <input asp-for="ImageFile" class="input w-full border mt-2">
                </div>
                <div>
                    <label asp-for="Image1File">Image</label>
                    <input asp-for="Image1File" class="input w-full border mt-2">
                </div>
                <div>
                    <label asp-for="Image2File">Image</label>
                    <input asp-for="Image2File" class="input w-full border mt-2">
                </div>
                <div>
                    <label asp-for="VideoImageFile">VideoImage</label>
                    <input asp-for="VideoImageFile" class="input w-full border mt-2">
                </div>
                <div>
                    <label asp-for="CreatedDate">CreatedDate</label>
                    <input asp-for="CreatedDate" class="input w-full border mt-2">
                </div>
                <div>
                    <label asp-for="Title">Title</label>
                    <input asp-for="Title" class="input w-full border mt-2">
                </div>
                <div class="mt-3">
                    <label asp-for="Description1">Description1</label>
                    <div class="mt-2">
                        <textarea data-feature="basic" asp-for="Description1" style=" width: 100%; border: 1px solid #e2e8f0; border-radius: 5px; height: 100px;"></textarea>
                    </div>
                </div>
                <div class="mt-3">
                    <label asp-for="Description2">Description2</label>
                    <div class="mt-2">
                        <textarea data-feature="basic" asp-for="Description2" style=" width: 100%; border: 1px solid #e2e8f0; border-radius: 5px; height: 100px;"></textarea>
                    </div>
                </div>
                <div class="mt-3">
                    <label asp-for="Description3">Description3</label>
                    <div class="mt-2">
                        <textarea data-feature="basic" asp-for="Description3" style=" width: 100%; border: 1px solid #e2e8f0; border-radius: 5px; height: 100px;"></textarea>
                    </div>
                </div>
                <div>
                    <label asp-for="Subtitle">Subtitle</label>
                    <input asp-for="Subtitle" class="input w-full border mt-2">
                </div>
                <div class="mt-3">
                    <label asp-for="CategoryId">Category</label>
                    <div class="mt-2">
                        <select asp-for="CategoryId" asp-items="@(new SelectList(ViewBag.Category,"Id","Name"))" data-placeholder="Select your favorite actors" class="select2 w-full multiple">
                            <option selected="" disabled>Select Category</option>
                        </select>
                    </div>
                </div>
                <div class="mt-3" id="tags1" >
                    <span class="plus">+</span>
                    <div class="tags-item">
                        <label asp-for="newsToTags[0].TagsId">Tags</label>
                        <div class="mt-2">
                            <select asp-for="newsToTags[0].TagsId" asp-items="@(new SelectList(ViewBag.Tags,"Id","Name"))" data-placeholder="Select your favorite actors" class="select2 w-full multiple">
                                <option selected="" disabled>Select Tags</option>
                            </select>
                        </div>
                    </div>
                    <hr style="margin:10px 0px" />
                </div>

                <div>
                    <label asp-for="Link">Link</label>
                    <input asp-for="Link" class="input w-full border mt-2">
                </div>

                <div class="text-right mt-5">
                    <a t class="button w-24 border text-gray-700 mr-1" asp-area="Admin" asp-controller="AdmNews" asp-action="Index">Cancel</a>
                    <button type="submit" class="button w-24 bg-theme-1 text-white">Create</button>
                </div>
            </div>
        </form>
        <!-- END: Form Layout -->
    </div>
</div>
